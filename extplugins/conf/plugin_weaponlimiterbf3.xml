<configuration plugin="weaponlimiterbf3">
    <settings name="commands">
        <set name="weaponlimiter-wpl">60</set>
    </settings>

    <settings name="messages">
        <set name="weaponlimiter_enabled">WeaponLimiter for that round activated!</set>
        <set name="weaponlimiter_disabled">Weaponlimiter disabled! All Weapons allowed.</set>
        <set name="warn_message">You used a forbidden weapon! ^7!forbidden_weapons show the list of forbidden weapons</set>
        <set name="forbidden_message">Forbidden Weapons are: %s</set> <!-- Notification of forbidden weapons -->
        <set name="allowed_message">Allowed Weapons are: %s</set> <!-- Notification of forbidden weapons -->
    </settings>

    <settings name="settings">
        <set name="notice_message_cron">05</set> <!-- Inform every 30 mins of forbidden weapons -->
    </settings>

    <settings name="punisher-settings">
        <set name="kill_player">yes</set> <!-- kill player (without scoring effects) -->
        <set name="warn_player">yes</set> <!-- warn player with Warn system (player got kick after x warning) -->
    </settings>

    <!-- Weapon and Map configuration -->
    <settings name="MP_Subway"> <!-- identify forbidden weapons per mapname  -->
        <set name="weapons">SMAW, M320, RPG-7, USAS-12</set> <!-- comma delimited list of forbidden weapons -->
        <set name="gametype">SquadDeathMatch0, ConquestSmall0, ConquestLarge0</set> <!-- comma delimited list of gametypes (TODO: implement "all" for every) -->
        <set name="mode">blacklist</set> <!-- Set blacklist or whitelist for describe weapons list as allowed or disallowed -->
    </settings>
    <!-- Weapon and Map configuration - only allow Pistol and Knife -->
    <settings name="MP_017">
        <set name="weapons">Death, Meele, M9, Glock18, M1911, M93R, Weapons/Knife/Knife,  Weapons/MP412Rex/MP412REX, Weapons/MP443/MP443, Taurus .44</set>
        <set name="gametype">TeamDeathMatch0</set>
        <set name="mode">whitelist</set>
    </settings>

    <!-- sample add second map configuration
    <settings name="MP_011">
    <set name="weapons">SMAW, M320, RPG-7</set>
            <set name="gametype">SquadDeathMatch0, ConquestSmall0</set>
    </settings> -->

</configuration>
